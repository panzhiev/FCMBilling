<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.panzhyiev.fcmexample">

    <permission
        android:name="com.panzhyiev.fcmexample.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.panzhyiev.fcmexample.permission.C2D_MESSAGE" />

    <uses-permission-sdk-23 android:name="com.panzhyiev.fcmexample.permission.C2D_MESSAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <application
        android:name="com.panzhyiev.fcmexample.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.panzhyiev.fcmexample.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.panzhyiev.fcmexample.ui.activity.ResultNotificationActivity"
            android:label="@string/title_activity_result_notification"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="OPEN_ACTIVITY_RESULT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.panzhyiev.fcmexample.ui.activity.purchaseActivity.PurchaseActivity"
            android:label="@string/title_activity_purchase"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.panzhyiev.fcmexample" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.panzhyiev.fcmexample.fcm.RegistrationService"
            android:exported="false" />
        <service
            android:name="com.panzhyiev.fcmexample.fcm.TokenRefreshListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name="com.panzhyiev.fcmexample.fcm.NotificationsListenerService"
            android:exported="false">
            <intent-filter>

                <!-- <action android:name="com.google.android.c2dm.intent.RECEIVE" /> -->
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>