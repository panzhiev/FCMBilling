<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout_item_my_nvs"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_icon_name_coin_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/divider_s"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/divider_s">

            <ImageView
                android:id="@+id/iv_crypto_icon"
                android:layout_width="@dimen/dimen_currency_icon"
                android:layout_height="@dimen/dimen_currency_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                tools:src="@drawable/xrp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_symbol_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeMedium"
                    tools:text="XRP" />

                <TextView
                    android:id="@+id/tv_name_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:maxWidth="100dp"
                    android:singleLine="true"
                    tools:text="Ripple" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignBottom="@+id/ll_icon_name_coin_buy"
            android:background="@color/translucent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view"
            android:orientation="horizontal"
            android:padding="@dimen/divider_s">

            <TextView
                android:id="@+id/tv_amount_for_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:singleLine="true"
                android:maxWidth="80dp"
                android:textSize="@dimen/textSizeSmall"
                android:text="1 XRP"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_buy_coins_item"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="60dp"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/divider_s"
                android:text="@string/button_buy"
                android:textColor="@color/white"
                android:theme="@style/ColorPrimaryButton" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>